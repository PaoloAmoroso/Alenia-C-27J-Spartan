<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <default>
    <menu n="10">
      <label>C-27J</label>
      <enabled type="bool">true</enabled>
      <item>
        <label>Autostart</label>
        <binding>
          <command>property-toggle</command>
          <property>controls/electric/battery-switch</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/electric/engine/generator</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/electric/engine/generator</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/instrument-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/map-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/nav-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/strobe-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/beacon</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/switches/starterkey-insert</property>
        </binding>
        <!-- Magnetos -->
        <binding>
          <condition>
            <property>controls/switches/starterkey-insert</property>
          </condition>
          <command>property-assign</command>
          <property>controls/engines/engine[0]/magnetos</property>
          <value>3</value>
        </binding>
        <binding>
          <condition>
            <property>controls/switches/starterkey-insert</property>
          </condition>
          <command>property-assign</command>
          <property>controls/engines/engine[1]/magnetos</property>
          <value>3</value>
        </binding>
        <binding>
          <condition>
            <not>
              <property>controls/switches/starterkey-insert</property>
            </not>
          </condition>
          <command>property-assign</command>
          <property>controls/engines/engine[0]/magnetos</property>
          <value>0</value>
        </binding>
        <binding>
          <condition>
            <not>
              <property>controls/switches/starterkey-insert</property>
            </not>
          </condition>
          <command>property-assign</command>
          <property>controls/engines/engine[1]/magnetos</property>
          <value>0</value>
        </binding>
        <binding>
          <command>nasal</command>
          <script>engines.autostart();</script>
        </binding>
      </item>
      <item>
        <label>Select Livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.toggle()</script>
        </binding>
      </item>
      <item>
        <label>C-27J Next Generation</label>
        <binding>
          <command>property-toggle</command>
          <property>sim/model/hide-NG</property>
        </binding>
      </item>
      <item>
        <label>EC-27J J.E.D.I.</label>
        <binding>
          <command>property-toggle</command>
          <property>sim/model/hide-JEDI</property>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>sim/model/hide-MAFFS</property>
          <value>0</value>
        </binding>
      </item>
      <item>
        <label>Show/Hide MAFFS System</label>
        <binding>
          <command>property-toggle</command>
          <property>sim/model/hide-MAFFS</property>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>sim/model/hide-JEDI</property>
          <value>0</value>
        </binding>
      </item>
      <item>
        <label>Show/Hide FLIR</label>
        <binding>
          <command>property-toggle</command>
          <property>sim/model/hide-flir</property>
        </binding>
      </item>
      <item>
        <label>Show/Hide Refuelling Probe</label>
        <binding>
          <command>property-toggle</command>
          <property>sim/model/hide-probe</property>
        </binding>
      </item>
    </menu>
  </default>

</PropertyList>
