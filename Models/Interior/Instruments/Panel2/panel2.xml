<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>panel2.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>buttons</object-name>
    <object-name>texte</object-name>
    <object-name>FMC.nav</object-name>
    <object-name>FMC.fms</object-name>
    <object-name>FMC.btn1</object-name>
    <object-name>FMC.btn2</object-name>
    
    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>buttons</object-name>
    <object-name>texte</object-name>
    <object-name>FMC.nav</object-name>
    <object-name>FMC.fms</object-name>
    <object-name>FMC.btn1</object-name>
    <object-name>FMC.btn2</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>
  
  <!-- NAV -->
  <animation>
    <type>pick</type>
    <object-name>FMC.nav</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>pilotauto.FD_nav_src_set("nav");</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>FMC.fms</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>pilotauto.FD_nav_src_set("fms");</script>
      </binding>
    </action>
  </animation>
  
  <!-- BRG 1 -->
  <animation>
    <type>knob</type>
    <drag-direction>vertical</drag-direction>
    <object-name>FMC.btn1</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/primus2000/sc840/nav1ptr</property>
        <factor> -1 </factor>
        <min> 0 </min>
        <max> 3 </max>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>FMC.btn1</object-name>
    <property>instrumentation/primus2000/sc840/nav1ptr</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 25 </dep></entry>
      <entry><ind> 2 </ind><dep> 55 </dep></entry>
      <entry><ind> 3 </ind><dep> 85 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m> -0.05053 </y-m>
      <z-m> -0.02197 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <!-- BRG 2 -->
  <animation>
    <type>knob</type>
    <drag-direction>vertical</drag-direction>
    <object-name>FMC.btn2</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/primus2000/sc840/nav2ptr</property>
        <factor> 1 </factor>
        <min> 0 </min>
        <max> 3 </max>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>FMC.btn2</object-name>
    <property>instrumentation/primus2000/sc840/nav2ptr</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep>  45 </dep></entry>
      <entry><ind> 2 </ind><dep>  90 </dep></entry>
      <entry><ind> 3 </ind><dep> 120 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m>  0.05210 </y-m>
      <z-m> -0.02197 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
