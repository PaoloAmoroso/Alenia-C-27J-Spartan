<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>throttle.ac</path>
  
  <animation>
    <!-- Objets opaques -->
    <object-name>base</object-name>
    <object-name>trouspedestal</object-name>
    <object-name>throttleG</object-name>
    <object-name>throttleD</object-name>
    
    <!-- Objets transparents -->
  </animation>
  
  <animation>
    <type>knob</type>
    <drag-direction>vertical</drag-direction>
    <object-name>throttleG</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/throttle</property>
        <factor> 0.05 </factor>
        <min>0</min>
        <max>1</max>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>throttleG</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor> 90 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>knob</type>
    <drag-direction>vertical</drag-direction>
    <object-name>throttleD</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[1]/throttle</property>
        <factor> 0.05 </factor>
        <min>0</min>
        <max>1</max>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>throttleD</object-name>
    <property>controls/engines/engine[1]/throttle</property>
    <factor> 90 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
