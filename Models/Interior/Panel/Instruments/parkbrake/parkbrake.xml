<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>parkbrake.ac</path>
  
  <animation>
    <!-- Objets opaques -->
    <object-name>base</object-name>
    <object-name>parkbrake</object-name>
    
    <!-- Objets transparents -->
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>parkbrake</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/gear/brake-parking</property>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>parkbrake</object-name>
    <property>controls/gear/brake-parking</property>
    <factor> 0.03 </factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>parkbrake</object-name>
    <property>controls/gear/brake-parking</property>
    <factor> 90 </factor>
    <center>
      <x-m> -0.01157 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.00000 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
</PropertyList>
